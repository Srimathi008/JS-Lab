var num1 = parseFloat(prompt("Enter the first number:"));
let num2 = parseFloat(prompt("Enter the second number:"));

const sum = num1 + num2;
const difference = num1 - num2;
const product = num1 * num2;
const division = num2 !== 0 ? (num1 / num2) : "Cannot divide by zero";
const modulus = num2 !== 0 ? (num1 % num2) : "Cannot perform modulus with zero";

console.log("üî¢ Simple Calculator Results:");
console.log(`‚ûï Sum: ${num1} + ${num2} = ${sum}`);
console.log(`‚ûñ Difference: ${num1} - ${num2} = ${difference}`);
console.log(`‚úñÔ∏è Product: ${num1} * ${num2} = ${product}`);
console.log(`‚ûó Division: ${num1} / ${num2} = ${division}`);
console.log(`% Modulus: ${num1} % ${num2} = ${modulus}`);
